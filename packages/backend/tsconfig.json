		"outDir": "./dist",
		"sourceRoot": "./",
		"baseUrl": ".",
		"module": "CommonJS",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exlude": ["node_modules"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
