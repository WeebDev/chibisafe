{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "./dist",
		"sourceRoot": "./",
		"baseUrl": ".",
		"module": "ESNext",
		"types": ["node", "vite/client"],
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.js", "**/*.vue", "**/*.test.ts", "**/*.test.js", "**/*.spec.ts", "**/*.spec.js"],
	"exlude": ["node_modules", "dist", "public"]
}
