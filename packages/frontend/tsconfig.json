{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "./dist",
		"module": "ESNext",
		"types": ["node", "vite/client"],
		"typeRoots": ["node_modules/@types", "src"],
		"paths": {
			"@/*": ["packages/frontend/src/*"],
			"~/*": ["packages/frontend/src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.js", "**/*.vue", "**/*.test.ts", "**/*.test.js", "**/*.spec.ts", "**/*.spec.js"],
	"exlude": ["node_modules", "dist", "public"]
}
